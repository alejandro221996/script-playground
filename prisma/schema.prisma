generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MockConfig {
  id          String   @id @default(cuid())
  name        String?
  endpoint    String
  method      String   // GET, POST, PUT, DELETE, PATCH
  response    Json     // JSON response data
  statusCode  Int      @default(200) @map("status_code")
  headers     Json?    @default("{}") // JSON headers
  delay       Int?     @default(0) // delay in milliseconds
  enabled     Boolean  @default(true)
  description String?
  tags        String[] @default([]) // Array of strings for tags
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("mock_configs")
}